alignment bottom_left
double_buffer yes
background yes
border_width 1
cpu_avg_samples 2
default_color grey
default_outline_color white
default_shade_color white
draw_borders no
draw_graph_borders yes
draw_outline no
draw_shades no
use_xft yes
xftfont ubuntu:size=9 
gap_x 5
gap_y 1
minimum_size 1680 3
net_avg_samples 2
no_buffers yes
out_to_console no
out_to_stderr no
extra_newline no
own_window yes 
own_window_type sticky 
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager 
own_window_argb_visual yes ##This controls transparency on gnome
own_window_argb_value 200 ##This controls the opacity
pad_percents 2
stippled_borders 0
update_interval 2.0
uppercase no
use_spacer left
show_graph_scale no
show_graph_range no

TEXT
${color}${font ubuntu:size=9}${nodename}: ${color cyan}${sysname} ${kernel}${color}   \
|   up: ${color cyan}$uptime$color   \
|   Root: ${color cyan}${fs_used /} $color/${fs_size /}\
   Home: ${color cyan}${fs_used /home} $color/${fs_size /home}   \
|   Temp:${color cyan} ${exec sensors | grep 'Core 1' | sed -e s/°C.*\)/°C/ -e s/Core.*+//} : ${exec sensors | grep 'Core 0' | sed -e s/°C.*\)/°C/ -e s/Core.*+//}$color    \
|   CPU0: ${cpugraph cpu0 10,30 000000 000000}\
   CPU1: ${cpugraph cpu1 10,30 000000 000000}\
   CPU2: ${cpugraph cpu2 10,30 000000 000000}\
   CPU3: ${cpugraph cpu3 10,30 000000 000000}   \
|   RAM: ${color cyan}$mem$color    \
|   Net-Up: ${upspeedgraph wlp3s0 10,40 000000 000000} ${color cyan}${upspeed wlp3s0}$color/${totalup wlp3s0}\
   Net-Down: ${downspeedgraph wlp3s0 10,40 000000 000000} ${color cyan}${downspeed  wlp3s0}$color/${totaldown wlp3s0}
